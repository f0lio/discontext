{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@discord/*": ["discord/*"],
      "@embedding/*": ["embedding/*"],
      "@storage/*": ["storage/*"],
      "@shared/*": ["shared/*"]
    }
  }
}
